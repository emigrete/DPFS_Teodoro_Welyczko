<header id ="navbar" class="navbar">
    <div class="logo">LOGO</div>

    <nav class="nav-links">
        <a href="/">Inicio</a>
        <a href="/offers">Ofertas</a>
        <a href="/products">Todos Los Productos</a>
        <a href="/help">Ayuda</a>

        <% if (user && user.role === "admin") { %>
            <a href="/products/create" class="admin-btn">➕ Crear Producto</a>
            <a href="/products/1/edit" class="admin-btn">✏️ Editar Producto</a>
        <% } %>
    </nav>

    <div class="search-bar">
        <form action="/products/search" method="GET">
            <input type="text" name="query" placeholder="Buscar productos..." required>
            <button type="submit" class="search-button">🔍</button>
        </form>
    </div>
    

    <div class="cart-login">
        <a href="/cart">🛒 Carrito</a>

        <% if (user) { %>
            <span class="username">👤 <%= user.firstName %></span>
            <a href="/logout" class="btn logout-btn">Cerrar Sesión</a>
        <% } else { %>
            <a href="/login" class="btn login-btn">Ingresar</a>
        <% } %>
    </div>
</header>
