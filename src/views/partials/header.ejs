<header id ="navbar" class="navbar">
    <div class="logo">LOGO</div>

    <nav class="nav-links">
        <a href="/">Inicio</a>
        <a href="/offers">Ofertas</a>
        <a href="/products">Todos Los Productos</a>
        <a href="/help">Ayuda</a>

        <% if (user && user.role === "admin") { %>
            <a href="/product/create" class="admin-btn">➕ Crear Producto</a>
            <a href="/edit/1" class="admin-btn">✏️ Editar Producto</a>
        <% } %>
    </nav>

    <div class="search-bar">
        <input type="text" placeholder="Buscar...">
        <button class="serch-button">🔍</button>
    </div>

    <div class="cart-login">
        <a href="/cart">🛒 Carrito</a>

        <% if (user) { %>
            <span class="username">👤 <%= user.firstName %></span>
            <a href="/logout" class="btn logout-btn">Cerrar Sesión</a>
        <% } else { %>
            <a href="/login" class="btn login-btn">Ingresar</a>
        <% } %>
    </div>
</header>
