<header id="navbar" class="navbar">
    <div class="logo"><img src="/images/favicon.ico" alt=""></div>

    <nav class="nav-links">
        <a href="/">Inicio</a>
        <a href="/#discount">Ofertas</a>
        <a href="/products">Todos Los Productos</a>
        <a href="/help">Ayuda</a>

        <% if (user && user.role === "admin") { %>
            <a href="/products/create" class="admin-btn">➕ Crear Producto</a>
        <% } %>
    </nav>

    <div class="search-bar">
        <form action="/products/search" method="GET">
            <input type="text" name="query" placeholder="Buscar productos..." required>
            <button type="submit" class="search-button">🔍</button>
        </form>
    </div>

    <div class="cart-login">
        <% if (user) { %>  
            <a href="/cart">🛒 Carrito</a>  <!-- ✅ SOLO aparece si hay usuario -->

            <a href="/profile" class="profile-link">
                <img src="/images/users/<%= user.image ? user.image : 'default.jpg' %>" alt="Perfil">
            </a>
        <% } else { %>
            <a href="/login" class="btn login-btn">Ingresar</a>
        <% } %>
    </div>
</header>
