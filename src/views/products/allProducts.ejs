<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/allProducts.css">
</head>

<body>
    <%- include('../partials/header'); %>
    
    <main class="products-container">
        <h1>Todos los Productos</h1>
        <form action="/products/filter" method="GET" class="filter-form">
            <label for="category">Filtrar por categoría:</label>
            <select name="category" id="category" onchange="this.form.submit()">
                <option value="" <%= category === "" ? 'selected' : '' %>>Todas</option>
                <option value="Laptops" <%= category === "Laptops" ? 'selected' : '' %>>Laptops</option>
                <option value="Accesorios" <%= category === "Accesorios" ? 'selected' : '' %>>Accesorios</option>
                <option value="Periféricos" <%= category === "Periféricos" ? 'selected' : '' %>>Periféricos</option>
            </select>
        </form>
        
        <div class="product-grid">
            <% if (products && products.length > 0) { %>
                <% products.forEach((product) => { %>
                    <div class="product-card">
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                        <h3><%= product.name %></h3>
                        <p class="price">$<%= product.price %></p>
                        <a href="/products/<%= product.id %>" class="btn">Ver Detalle</a>

                        <% if (user && user.role === "admin") { %>
                            <a href="/products/<%= product.id %>/edit" class="btn btn-edit">Editar</a>
                            <form action="/products/<%= product.id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-delete" 
                                    onclick="return confirm('¿Seguro que quieres eliminar este producto?');">
                                    Eliminar
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No hay productos disponibles.</p>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer'); %>
</body>

</html>
