<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/productDetail.css">
    <script defer src="/js/productDetail.js"></script> <!-- 📌 Script para expandir descripción -->
</head>
<body>
    <%- include('../partials/header'); %>

    <section class="product-detail-container">
        <div class="product-image">
            <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
        </div>
        <div class="product-info">
            <h2><%= product.name %></h2>
            <p class="description short-description"><%= product.description %></p>
            <button class="btn view-more-btn">Ver más</button> <!-- Botón para expandir descripción -->

            <p class="price">$<%= product.price %></p>
            <p><strong>Categoría:</strong> <%= product.category ? product.category.name : 'No especificado' %></p>
            <p><strong>Marca:</strong> <%= product.brand ? product.brand.name : 'No especificado' %></p>
            <p><strong>Color:</strong> <%= product.color ? product.color.name : 'No especificado' %></p>

            <div class="cart-section">
                <form action="/cart/add" method="POST">
                    <input type="hidden" name="productId" value="<%= product.id %>">
                    
                    <div class="quantity-controls">
                        <button type="button" class="btn-quantity decrease">-</button>
                        <input type="number" name="quantity" value="1" min="1">
                        <button type="button" class="btn-quantity increase">+</button>
                    </div>
            
                    <button type="submit" class="btn add-cart-btn">🛒 Agregar al Carrito</button>
                </form>
            </div>
        </div>
    </section>

    <%- include('../partials/footer'); %>
</body>
</html>
